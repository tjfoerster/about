---
import HeaderLink from './HeaderLink.astro';
import Toggle from './ThemeSwitch.astro'
import { SITE_TITLE } from '../config';
---

<header>
	<h2 style="display: flex; justify-content: space-between;">
		{SITE_TITLE}
		<Toggle />
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="https://twitter.com/timonfoerster" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/tjfoerster" target="_blank">GitHub</HeaderLink>
		<HeaderLink href="https://gitlab.com/tjfoerster" target="_blank">GitLab</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
